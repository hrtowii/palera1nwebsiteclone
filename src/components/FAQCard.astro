---
import '../main.css'
export interface Props {
    question: string;
    answer: string;
    link?: string;
}
const { question, answer, link } = Astro.props
---

<li class="faqcard">
		<h2>
			{question}
		</h2>
        {link ? (
            <a style="color: white;"class="faqlink" href={link} target="_blank" rel="noopener noreferrer">
              {answer}
            </a>
          ) : (
            answer
          )}
        </p>
	</a>
</li>
<style>
	.faqcard {
        margin-top: 2vh;
		list-style: none;
		display: block;
		padding: 1rem;
        text-align: start;
		background-color: var(--background2);
		border-radius: 0.7rem;
        border-color: rgba(var(--accent), 0.7);
        border-style: solid;
        border-width: 2px;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	h2 {
        margin: 0;
		margin-bottom: 5px;
		font-size: 1.25rem;
		color: rgb(var(--accent));
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 1rem;
		margin-bottom: 0;
		color: rgb(var(--text));
	}

	.faqcard:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}

</style>