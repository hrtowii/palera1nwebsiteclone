---
import "../main.css";
import { Icon } from "astro-icon";
export interface Props {
    style?: string;
    isHidden: string;
    os: string;
    arch: string;
}
const { style, isHidden, os, arch } = Astro.props;
const downloadLink: string =
    "https://github.com/palera1n/palera1n/releases/download/v2.0.0-beta.6.2/palera1n-" +
    os +
    "-" +
    arch;
    
var osString: string;
if (os == "macos") {
    osString = "MacOS";
} else if (os == "linux") {
    osString = "Linux";
} else {
    osString = "Windows";
}
var archString: string;
if (arch == "x86") {
    archString = "i686";
} else if (arch == "arm64") {
    archString = "aarch64";
} else {
    archString = arch;
}

var isHiddenString: string = "";
if (isHidden == "true") {
    isHiddenString = "hidden";
} else if (isHidden == "false") {
    isHiddenString = "";
}
---
<div class="centered">
    <a style={style} href={downloadLink} id={os + arch} class={isHiddenString}>
        <Icon pack="mdi" name="download" class="download" />
        <span>Download for {osString} (CLI, {archString})</span>
    </a>
</div>
<style>
    .download {
        position: relative;
        color: white;
        height: 1.4em;
        margin-right: 0.1rem;
        top: 0.1rem;
    }
    span {
        color: white;
        margin-top: 0.1rem;
    }
    a {
        display: flex;
        padding: 0.75rem;
        background-color: var(--background2);
        color: white;
        justify-content: center;
        align-items: center;
        border-radius: 0.75rem;
        border-width: 2px;
        border-color: var(--background3);
        border-style: solid;
        text-decoration: none;
        width: 40%;
    }

    @media (max-width: 1024px) {
        a {
            width: 100%;
        }
</style>
